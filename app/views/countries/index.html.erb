<%= link_to 'New Country', new_country_path %>
<p id="notice"><%= notice %></p>
<div class="row justify-content-center m-0 text-center">
  <div class="col-6 text-dark rounded p-4">
        
    <h1>Table</h1>
    <br>
    <div class="row justify-content-center">
      <table class="table-border-less table-striped ">
        <thead class="bg-dark text-white rounded">
          <tr >
            <th class="p-3">Name</th>
            <th class="p-3">Iata code</th>
            <th class="p-3">Number country</th>
            <th class="p-3" colspan="3">Options</th>
          </tr>
        </thead>

        <tbody>
          <% @countries.each do |country| %>
            <tr>
              <td class="p-2"><%= country.name %></td>
              <td class="p-2"><%= country.iata_code %></td>
              <td class="p-2"><%= country.number_country %></td>
              <td class="p-2"><%= link_to 'Show', country %> |</td>
              <td class="p-2"><%= link_to 'Edit', edit_country_path(country) %> |</td>
              <td class="p-2"><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>


  </div>
</div>